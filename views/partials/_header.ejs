<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
    <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <!--The statement below checks if there is a user saved in the cookies, and displays either the logged username or a login button-->
    <% if (userId) { %>
      <h6>
        Logged In As:
        &#160
        <%= userId.email %>
      </h6>
      &#160&#160&#160
      <form method="POST" action="/logout">
        <button type="submit" class="btn btn-outline-dark">Logout
        </button>
      </form>
    <% }else { %> 
    
      <!--if there is no user logged in a button will be available to redirect the user to a login or register page-->
      <div class="navbar-nav">
        <a href="/urls/login" class="nav-item nav-link">Login</a>
        <a href="/urls/register" class="nav-item nav-link">Register</a>
      </div>  
    <% } %>
  </nav>
</header>