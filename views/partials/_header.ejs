<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
    <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>

        <!--REMOVE THIS-->
        <a class="nav-item nav-link" href="/urls/register">register</a>
      </div>
    </div>

    <!--The statement below checks if there is a user saved in the cookies, and displays either the logged username or a sign in form-->
    <% if (user) { %>
      <h6>
        Logged in as:
        &#160
        <%= user.email %>
      </h6>
      &#160&#160&#160
      <form method="POST" action="/logout">
        <button type="submit" class="btn btn-outline-dark">Logout
        </button>
      </form>
    <% }else { %> 
    
    <!--add a user by inputting a username into a form that includes a button. The user info is stored as cookies-->
    <form class="form-inline" action="/login" method="POST">
      <div class="form-group mb-2">
        <input
          class="form-control"
          type="text"
          name="username"
          placeholder="username"
          style="width: 120px; margin: 1em"
        />
        <button type="submit" class="btn btn-outline-dark">Login</button>
      </form> 
      <% } %>
  </nav>
</header>